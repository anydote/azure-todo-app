{
  "$schema": "https://aka.ms/azure/static-web-apps-cli/schema",
  "configurations": {
    "azure-todo-app": {
      "appLocation": ".",
      "apiLocation": "api",
      "outputLocation": "build",
      "apiLanguage": "python",
      "apiVersion": "3.11",
      "apiBuildCommand": "uv pip install --no-cache --target .python_packages/lib/site-packages -r pyproject.toml",
      "appBuildCommand": "npm run build",
      "run": "npm start",
      "appDevserverUrl": "http://localhost:3000",
      "appName": "todo-app",
      "resourceGroup": "todo-rg"
    }
  }
}